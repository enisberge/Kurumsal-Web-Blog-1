@using KurumsalWeb.Models.Model
@model IEnumerable<Blog>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script>
    $(document).ready(function () {
        $('#myTable').DataTable(
            {
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json"
                }
            });
    });
</script>

<h2>Blog Kayıtları</h2>
<hr />
@*<a class="btn btn-success" href="/Blog/Create/">Yeni Blog</a>*@

<p>
    @Html.ActionLink("Yeni Ekle", "Create", null, new { @class = "btn btn-success btn-sm" })
</p>


<table class="table table-striped" id="myTable">
    <thead>
        <tr>
            <th>#</th>
            <th>Başlık</th>
            <th>Kategori</th>
            <th>ResimURL</th>
            <th width="20%">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var itemBlog in Model)
        {
            <tr>
                <td>@itemBlog.BlogId</td>
                <td>@itemBlog.Baslik</td>
                <td>@itemBlog.Kategori.KategoriAd</td>
                <td><img src="@itemBlog.ResimURL" width="100" height="100" /></td>
                <td>
                    <a class="btn btn-primary" href="/Blog/Edit/@itemBlog.BlogId">Güncelle</a>
                    <a class="btn btn-danger" href="/Blog/Delete/@itemBlog.BlogId">Sil</a>
                </td>
            </tr>
        }

    </tbody>
</table>
