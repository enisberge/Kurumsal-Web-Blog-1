<div class="container">
    <div class="row">
        <div class="col-lg-3">
            <div class="widget">
                <h5 class="widgetheading">Bana Ulaşın</h5>
                <address>
                    <strong>@ViewBag.Iletisim.Adres</strong>
                </address>
                <p>
                    <i class="fas fa-phone-square-alt"></i> @ViewBag.Iletisim.Telefon<br>
                    <i class="fas fa-envelope-square"></i> @ViewBag.Iletisim.Email
                </p>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="widget">
                <h5 class="widgetheading">Menü</h5>
                <ul class="link-list">
                    <li><a href="/Anasayfa">Anasayfa</a></li>
                    <li><a href="/Hakkimizda">Hakkımızda</a></li>
                    <li><a href="/Blog">Blog</a></li>
                    <li><a href="/Hizmetlerimiz">Hizmetler</a></li>
                    <li><a href="/Iletisim">İletişim</a></li>
                </ul>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="widget">
                <h5 class="widgetheading">Son Blog Yazıları</h5>
                <ul class="link-list">
                    @foreach (var itemBlog in ViewBag.Blog)
                    {
                        <li><a href="/Home/BlogDetay/@itemBlog.BlogId">@itemBlog.Baslik</a></li>

                    }

                </ul>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="widget">
                <h5 class="widgetheading">Hizmetlerimiz</h5>
                <div class="flickr_badge">
                    @foreach (var itemHizmetler in ViewBag.Hizmet)
                    {
                        <img src="@itemHizmetler.ResimURL" width="75" height="30" />
                    }

                </div>
                <div class="clear">
                </div>
            </div>
        </div>
    </div>
</div>
