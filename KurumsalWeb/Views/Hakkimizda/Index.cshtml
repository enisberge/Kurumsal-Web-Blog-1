@using KurumsalWeb.Models.Model
@model IEnumerable<Hakkimizda>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Aciklama)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.Raw(item.Aciklama)
            </td>
            <td>
                @Html.ActionLink("Güncelle", "Edit", new { id = item.HakkimizdaId },new{@class="btn btn-primary btn-sm"})
            </td>
        </tr>
    }

</table>
