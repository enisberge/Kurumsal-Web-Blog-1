@model IEnumerable<KurumsalWeb.Models.Model.Kategori>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Kategoriler</h2>
<hr />
<p>
    @Html.ActionLink("Yeni Kategori", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.KategoriAd)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Aciklama)
        </th>
        <th style="width: 20%"></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.KategoriAd)
            </td>
            <td>
                @Html.Raw(item.Aciklama)
            </td>
            <td>
                @Html.ActionLink("Güncelle", "Edit", new { id = item.KategoriId }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Sil", "Delete", new { id = item.KategoriId }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
